# Service template
template Service "linuxfabrik-service" {
  check_interval = 1m
  max_check_attempts = 5
  retry_interval = 30s

  # These are all remote commands
  if (host.vars.client_endpoint) {
    command_endpoint = host.vars.client_endpoint
  }
}

